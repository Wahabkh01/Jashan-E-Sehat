<!DOCTYPE html>
<html>
<head>
    <title>Patients</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            
        }
        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
        }
        td,th {
            text-align: center;
            padding: 8px;
        }

        td {
            border-right: 1px solid #f8f8f8;
            font-size: 12px;
        }

        thead th {
            color: #ffffff;
            background: #eca657;
        }

        thead th:nth-child(odd) {
            color: #ffffff;
            background: #e45b1c;
        }

        tr:nth-child(even) {
            background: #F8F8F8;
        }
        a {
            text-decoration: none;
            color: inherit;
        }
        h1 {
            text-align: center;
            font-size: 25px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: dimgray;
            font-family: Garamond, Baskerville, "Baskerville Old Face", "Hoefler Text", "Times New Roman", serif;
            font-weight: bold;
            padding: 30px 0;
        }

        nav ul {
            background-color: #e45b1c;
            overflow: hidden;
            color: white;
            padding: 0;
            text-align: center;
            margin: 0;
            -webkit-transition: max-height 0.4s;
            -ms-transition: max-height 0.4s;
            -moz-transition: max-height 0.4s;
            -o-transition: max-height 0.4s;
            transition: max-height 0.4s;
        }

        nav ul li {
            display: inline-block;
            padding: 20px;

        }

        nav ul li:hover {
            background-color: #f8f8f8;
            color: dimgray;
        }
        .handle {
            width: 100%;
            background: #005c48;
            text-align: left;
            box-sizing: border-box;
            padding: 15px 10px;
            cursor: pointer;
            color: white;
            display: none
        }

        @media (max-width: 767px) {

            nav ul {
                max-height: 0;
            }

            .showing {
                max-height: 20em;
            }

            nav ul li {
                box-sizing: border-box;
                width: 100%;
                padding: 15px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <a href="/login/patients">
                <li>Patients</li>
            </a>            
            <a href="/login/medications">
                <li>Medications</li>
            </a>
            <a href="/login/appointments">
                <li>Appointments</li>
            </a>
            <a href="/login/hospitals">
                <li>Hospitals</li>
            </a>
        </ul>
        
        <div class="handle">Menu</div>
    </nav>
    <h1>Patients</h1>
    <table>
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Sex</th>
                <th>Doctor ID</th>
                <th>Disease</th>
                <th>Condition</th>
                <th>Contact Info</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(patient => { %>
                <tr>
                    <td><%= patient.Pno %></td>
                    <td><%= patient.Name %></td>
                    <td><%= patient.Dob.toDateString() %></td>
                    <td><%= patient.Sex %></td>
                    <td><%= patient.DoctorID %></td>
                    <td><%= patient.Disease %></td>
                    <td><%= patient.Condition %></td>
                    <td><%= patient.ContactInfo %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
